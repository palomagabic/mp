<p id="notice"><%= notice %></p>

<h1> Juegos </h1>

<table>
  <thead>
    <tr>
      <th> Nombre </th>
      <th> Descripcion </th>
      <th> Codigo </th>
      <th> Ejecuciones </th>
      <th> disponible </th>
      <th> Fecha de creacion </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.description %></td>
        <td><%= game.code %></td>
        <td><%= game.execution %></td>
        <td><%= game.available %></td>
        <td><%= game.creation %></td>
        <td><button type="button" class="btn btn-success">
          <%= link_to ' Ver ', game %>
        </button></td>
        <td><button type="button" class="btn btn-warning">
          <%= link_to ' Editar ', edit_game_path(game) %>
        </button></td>
        <td><button type="button" class="btn btn-danger">
          <%= link_to ' Destruir ', game, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-dark">
  <%= link_to 'Crear Nuevo Juego', new_game_path %>
</button>
