<!DOCTYPE html>
<html>
  <head>
    <title>Mente pequeña</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <%= value %>
    </div>
    <% end %>
    <section>
      <div class="row">
          <div class="col-sm-4 col-md-3 sidenav">
            <a id="clickbuttom" href=" <%=games_path %>" class="list-group-item list-group-item-action">
             ¡JUEGA!
              </a>
            <a href="<%= pages_type_path %> " class="list-group-item list-group-item-action list-group-item-primary"> Instituciones </a>
            <a href="#" class="list-group-item list-group-item-action list-group-item-secondary"> Random </a>
            <a href="#" class="list-group-item list-group-item-action list-group-item-success">Nosotros</a>
            <a href="#" class="list-group-item list-group-item-action list-group-item-danger">Mision</a>
            <a href="#" class="list-group-item list-group-item-action list-group-item-warning">Preguntas Frecuentes</a>
            <a href=" <%= pages_client_path %>" class="list-group-item list-group-item-action list-group-item-info">Colaboracion </a>
            <a href=" <%= pages_contact_path %>" class="list-group-item list-group-item-action list-group-item-light">Contacto</a>
            <a href=" <%= pages_new_path %> " class="list-group-item list-group-item-action list-group-item-dark">Noticias</a>
        </div>
        <div class="col-md-6">
          <%= yield %>
        </div>
      </div>
    </section>
  </body>
</html>
