<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'favicon.png'%>
    <title>Mente pequeña<%= @names %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <style media="screen">
    .content {
      min-height: calc(100vh - 100px);
    }
    </style>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <%= value %>
    </div>
    <% end %>
    <section>

        <div class="content vh-97 my-auto p-5">
          <%= yield %>
        </div>
    </section>
    <footer class="container-fluid sticky-bottom bg-primary text-white p-5">
      <div class="row px-5">
        <a href="https://github.com/palomagabic" class="text-white">
          <%= fa_icon "github", class: "fa-2x" %>
        </a>
           <p class="mx-3 text-monospace">Creado por Paloma Cortes Lazo</p>
      </div>

    </footer>
  </body>
</html>
